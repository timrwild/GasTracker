<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:layout_weight="0.4">
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="225sp"
            android:layout_weight="0.25">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1.25">

                <TextView
                    android:text="@string/text_box_edit_fillup_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:gravity="center_vertical|end"
                    android:id="@+id/text_box_edit_fillup_date"
                    android:layout_weight="0.25"
                    android:paddingRight="7dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                <TextView
                    android:text="@string/text_box_edit_fillup_mileage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:gravity="center_vertical|end"
                    android:id="@+id/text_box_edit_fillup_mileage"
                    android:paddingRight="7dp"
                    android:layout_weight="0.25"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                <TextView
                    android:text="@string/text_box_edit_fillup_gallons"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:gravity="center_vertical|end"
                    android:id="@+id/text_box_edit_fillup_gallons"
                    android:ems="10"
                    android:paddingRight="7dp"
                    android:layout_weight="0.25"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                <TextView
                    android:text="@string/text_box_edit_fillup_full"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:gravity="center_vertical|end"
                    android:id="@+id/text_box_edit_fillup_full"
                    android:paddingRight="7dp"
                    android:layout_weight="0.25"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                <TextView
                    android:text="@string/text_box_edit_fillup_price"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:gravity="center_vertical|end"
                    android:id="@+id/text_box_edit_fillup_price"
                    android:paddingRight="7dp"
                    android:layout_weight="0.25"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1.25">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:focusable="false"
                    android:ems="5"
                    android:id="@+id/edit_text_edit_fillup_date"
                    android:layout_weight="0.25"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:inputType="numberDecimal"
                    android:ems="4"
                    android:id="@+id/edit_text_edit_fillup_mileage"
                    android:layout_weight="0.25"
                    android:hint="@string/edit_text_edit_fillup_hint_mileage"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:ems="4"
                    android:id="@+id/edit_text_edit_fillup_amount"
                    android:layout_weight="0.25"
                    android:inputType="numberDecimal"
                    android:hint="@string/edit_text_edit_fillup_hint_amount"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                <CheckBox
                    android:id="@+id/checkbox_edit_fillup_full"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:ems="4"
                    android:text="" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:inputType="numberDecimal"
                    android:ems="4"
                    android:id="@+id/edit_text_edit_fillup_price"
                    android:layout_weight="0.25"
                    android:hint="@string/edit_text_edit_fillup_hint_price"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:layout_weight="0.4">

            <Button
                android:text="@string/button_edit_fillup_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_edit_fillup"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>