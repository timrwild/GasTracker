<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:layout_weight="0.4">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1.5">

                <TextView
                    android:id="@+id/text_box_edit_maintenance_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical|end"
                    android:paddingRight="7dp"
                    android:text="@string/text_box_edit_maintenance_date"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                <TextView
                    android:id="@+id/text_box_edit_maintenance_mileage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical|end"
                    android:paddingRight="7dp"
                    android:text="@string/text_box_edit_maintenance_mileage"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                <TextView
                    android:id="@+id/text_box_edit_maintenance_type"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:layout_weight="0.25"
                    android:ems="10"
                    android:gravity="center_vertical|end"
                    android:paddingRight="7dp"
                    android:text="@string/text_box_edit_maintenance_type"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                <TextView
                    android:id="@+id/text_box_edit_maintenance_notes"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:layout_weight="0.75"
                    android:gravity="center_vertical|end"
                    android:paddingRight="7dp"
                    android:text="@string/text_box_edit_maintenance_notes"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1.5">

                <EditText
                    android:id="@+id/edit_text_edit_maintenance_date"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:ems="5"
                    android:focusable="false"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                <EditText
                    android:id="@+id/edit_text_edit_maintenance_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:ems="4"
                    android:hint="@string/edit_text_edit_maintenance_hint_mileage"
                    android:inputType="numberDecimal"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                <AutoCompleteTextView
                    android:id="@+id/edit_text_edit_maintenance_type"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:ems="4"
                    android:hint="@string/edit_text_edit_maintenance_hint_type"
                    android:inputType="textCapSentences"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                <EditText
                    android:id="@+id/edit_text_edit_maintenance_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:ems="6"
                    android:hint="@string/edit_text_edit_maintenance_hint_notes"
                    android:inputType="textCapCharacters|textCapSentences|textMultiLine"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:layout_weight="0.4">

            <Button
                android:text="@string/button_edit_maintenance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_edit_maintenance"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>