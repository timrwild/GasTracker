<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twild.gastracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityLoginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityListOfCars" />
        <activity android:name=".ActivityAddCar" />
        <activity android:name=".ActivityEditCar" />
        <activity
            android:name=".ActivityViewCarRecords"
            android:label="@string/title_activity_view_car_records"
            android:parentActivityName=".ActivityListOfCars"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.twild.gastracker.ActivityListOfCars" />
        </activity>
        <activity android:name=".ActivityAddFillup" />
        <activity android:name=".ActivityEditFillup"></activity>
    </application>

</manifest>